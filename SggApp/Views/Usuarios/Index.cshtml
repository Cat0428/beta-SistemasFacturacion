@model IEnumerable<SggApp.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Usuarios registrados</h2>
        <a asp-action="Create" class="btn btn-primary">‚ûï Nuevo Usuario</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay usuarios registrados.</div>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">‚ÑπÔ∏è Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-3">
        ‚¨ÖÔ∏è Volver al men√∫ principal
    </a>
</div>
