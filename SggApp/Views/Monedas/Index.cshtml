@model IEnumerable<SggApp.ViewModels.MonedaViewModel>

@{
    ViewData["Title"] = "Listado de Monedas";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Monedas Registradas</h4>
            <a asp-action="Create" class="btn btn-success">‚ûï Nueva Moneda</a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning">No hay monedas registradas.</div>
            }
            else
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>S√≠mbolo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Simbolo</td>
                                <td class="text-center">
                                   <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                   <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">‚ÑπÔ∏è Detalles</a>
                                  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">‚¨ÖÔ∏è Volver al men√∫ principal</a>
    </div>
</div>
