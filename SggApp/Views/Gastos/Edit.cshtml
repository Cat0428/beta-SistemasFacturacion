@model GastoViewModel

<h2>Edit Gasto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" type="text" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
        

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" type="number" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
        

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
        

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <input asp-for="CategoriaId" class="form-control" type="number" />
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
        
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
