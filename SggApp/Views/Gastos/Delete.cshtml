@model SggApp.ViewModels.GastoViewModel

@{
    ViewData["Title"] = "Eliminar Gasto";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4>¿Estás seguro de eliminar este gasto?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4">Fecha</dt>
                <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">Monto</dt>
                <dd class="col-sm-8">@Model.Monto.ToString("C")</dd>

                <dt class="col-sm-4">Categoría</dt>
                <dd class="col-sm-8">@Model.CategoriaNombre</dd>

                <dt class="col-sm-4">Moneda</dt>
                <dd class="col-sm-8">@Model.MonedaNombre</dd>

                <dt class="col-sm-4">Usuario</dt>
                <dd class="col-sm-8">@Model.UsuarioNombre</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Volver al menú principal</a>
    </div>
</div>
