@model IEnumerable<SggApp.ViewModels.GastoViewModel>

@{
    ViewData["Title"] = "Lista de Gastos";
}

<div class="container mt-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Gastos Registrados</h4>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Nuevo Gasto
            </a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">No hay gastos registrados.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Descripci√≥n</th>
                                <th>Monto</th>
                                <th>Fecha</th>
                                <th>Categor√≠a</th>
                                <th>Moneda</th>
                                <th>Usuario</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Monto.ToString("C")</td>
                                    <td>@item.Fecha.ToShortDateString()</td>
                                    <td>@item.CategoriaNombre</td>
                                    <td>@item.MonedaNombre</td>
                                    <td>@item.UsuarioNombre</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">‚úèÔ∏è Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">‚ÑπÔ∏è Detalles</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">‚¨ÖÔ∏è Volver al men√∫ principal</a>
    </div>
</div>
