@model IEnumerable<SggApp.ViewModels.GastoViewModel>

@{
    ViewData["Title"] = "Lista de Gastos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Gastos Registrados</h2>
        <a asp-action="Create" class="btn btn-primary">‚ûï Nuevo Gasto</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No hay gastos registrados.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>Descripci√≥n</th>
                        <th>Monto</th>
                        <th>Fecha</th>
                        <th>Categor√≠a</th>
                        <th>Moneda</th>
                        <th>Usuario</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Descripcion</td>
                            <td>@item.Monto.ToString("C")</td>
                            <td>@item.Fecha.ToShortDateString()</td>
                            <td>@item.CategoriaNombre</td>
                            <td>@item.MonedaNombre</td>
                            <td>@item.UsuarioNombre</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">‚ÑπÔ∏è Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">‚¨ÖÔ∏è Volver al men√∫ principal</a>
    </div>
</div>
