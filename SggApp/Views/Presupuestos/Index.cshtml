@model IEnumerable<SggApp.ViewModels.PresupuestoViewModel>

@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Presupuestos Registrados</h2>
        <a asp-action="Create" class="btn btn-success">‚ûïNuevo Presupuesto</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No hay presupuestos registrados.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Monto</th>
                    <th>Usuario</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaInicio.ToString("yyyy-MM-dd")</td>
                        <td>@item.FechaFin.ToString("yyyy-MM-dd")</td>
                        <td>@item.Monto.ToString("C")</td>
                        <td>@item.UsuarioNombre</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">‚ÑπÔ∏è Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">‚¨ÖÔ∏è Volver al men√∫ principal</a>
    </div>
</div>
